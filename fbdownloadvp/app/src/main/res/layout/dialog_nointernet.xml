<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vOutSide"
    style="@style/ThemeDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/rlMainNotInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/roundDialog"
        app:corner_radius="15dp">

        <ImageView
            android:id="@+id/imgErr"
            android:layout_width="@dimen/size_156_dp"
            android:layout_height="@dimen/size_87_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_35_dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgErr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_30_dp"
            android:textColor="@color/textDialog"
            android:textSize="@dimen/textsize_16_sp" />

        <TextView
            android:id="@+id/txtDec"
            android:layout_width="@dimen/size_200_dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_16_dp"
            android:gravity="center"
            android:textColor="@color/textDialog"
            android:textSize="@dimen/textsize_14_sp" />

        <Button
            android:id="@+id/btnNotFound"
            android:layout_width="@dimen/size_234_dp"
            android:layout_height="@dimen/size_50_dp"
            android:layout_below="@id/imgErr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_123_dp"
            android:background="@drawable/custum_buttom"
            android:text="@string/howToDownload"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnNotFound"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_16_dp"
            android:layout_marginBottom="@dimen/size_18_dp"
            android:padding="@dimen/size_8_dp"
            android:text="@string/close"
            android:textSize="@dimen/textsize_16_sp" />

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

</RelativeLayout>