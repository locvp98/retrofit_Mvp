<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.BrowseActivity"
    tools:ignore="VectorDrawableCompat">

    <LinearLayout
        android:id="@+id/appbarFacebook"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLinkWeb"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:ignore="MissingPrefix"/>


        <ImageView
            android:id="@+id/img_refresh"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rip_refress"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/refress_br"/>

    </LinearLayout>

    <WebView
        android:id="@+id/webFacebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbarFacebook"
        android:padding="@dimen/size_16_dp">
    </WebView>

</RelativeLayout>